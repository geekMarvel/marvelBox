@model PetShop.Models.Requests.RegisterRequest

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>



<style>


</style>



<html>
<head>
    <meta charset="utf-8">
    <title>Form</title>
    <link href="css/style.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@section Scripts {
    <environment include="Development">
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.unobtrusive.min.js"></script>
    </environment>
}

</head>


<body>
    <div class="containerLogin centered-container">
        <form class="formContainer" method="post" asp-action="Register" asp-controller="Authentication" enctype="multipart/form-data">
            <div class="box">
                <label asp-for="Username" class="fl fontLabel"> Username:</label>

                <div class="fl iconBox">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </div>

                <div class="fr">
                    <input asp-for="Username" required placeholder="username" class="textBox">
                </div>

                <div class="errorText lift">
                    <span asp-validation-for="Username"></span>
                </div>
            </div>
            <br />
            <div class="box">
                <label asp-for="Email" class="fl fontLabel"> Email:</label>

                <div class="fl iconBox">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </div>

                <div class="fr">
                    <input asp-for="Email" required placeholder="email" class="textBox">
                </div>
                <div class="errorText lift">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <br />
            <div class="box">
                <label asp-for="Password" class="fl fontLabel"> Password:</label>

                <div class="fl iconBox">
                    <i class="fa fa-key" aria-hidden="true"></i>
                </div>

                <div class="fr">
                    <input asp-for="Password" type="Password" required placeholder="password" class="textBox">
                </div>

                <div class="errorText lift passw">
                    <span calss="err3" asp-validation-for="Password"></span>
                </div>
            </div>

            <br />
            <div class="box">
                <label asp-for="ConfirmPassword" class="fl fontLabel"> Confirm Password:</label>

                <div class="fl iconBox">
                    <i class="fa fa-key" aria-hidden="true"></i>
                </div>

                <div class="fr">
                    <input asp-for="ConfirmPassword" type="Password" required placeholder="confirm password" class="textBox">
                </div>
                <div class="errorText lift">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            <br />
            <!---Gender----->
            <div class="box radio">
                <label asp-for="Role" class="fl fontLabel"> User Type: </label>
                <input asp-for="Role" type="radio" value="Regular" required> Regular
                <input asp-for="Role" type="radio" value="Administrator" required> Administrator
            </div>
            <!---Gender--->












            <div class="button-container">
                <button class="submit" type="submit">Register </button>
            </div>

        </form>
        <br />
        <br />
        @if (ViewBag.ErrorMessages != null)
        {
            <div id="alert" class="alert alert-danger">
                @Html.Raw(ViewBag.ErrorMessages)
            </div>
        }
    </div>
</body>
</html>



<script>
    $(function () {
        $(document).on('click keypress', function () {
            $('#alert').fadeOut();
        });
    });
</script>
